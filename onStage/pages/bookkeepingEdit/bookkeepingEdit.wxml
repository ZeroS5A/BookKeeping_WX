<!--pages/bookkeepingEdit/bookkeepingEdit.wxml-->
<view class="cu-card case margin-top">
  <view class="cu-item shadow">
  
    <scroll-view class="nav text-center">
      <view class="cu-item {{isIncome?'':'text-blue cur'}}" bindtap="typeSelect0">
        支出
      </view>
      <view class="cu-item {{isIncome?'text-blue cur':''}}" bindtap="typeSelect1">
        收入
      </view>
    </scroll-view>

    <view class="cu-form-group margin-top">    
      <view class="text-price" style="font-size:80rpx;padding-left:30rpx;padding-right:30rpx;"></view>
      <input style="font-size:60rpx;height:100%;" type="digit" bindinput="handleInputChange" data-modal='2' value="{{bkMoney}}"></input>
  	</view>

    <scroll-view wx:if="{{!isIncome}}" scroll-x="ture" scroll-y="false" class="nav text-center text-xs padding margin-top solid-top solid-bottom">
      <view class="cu-item" wx:for="{{bkType0}}" bindtap = "typeActive" id="{{item.icon}}" data-modal="{{item.name}}">
        <!-- <view class="flex cu-avatar round" style="background-image:url({{item.url}});"></view> -->
        <text class="cuIcon-{{item.icon}} lg {{iconType==item.icon?'text-white bg-blue':'text-black bg-grey light'}} flex cu-avatar round" style="font-size:x-large;"></text>
        <text class="{{iconType==item.icon?'text-blue':'text-black'}}" style="font-size:larger;">{{item.name}}</text>
      </view>
    </scroll-view>
    <scroll-view wx:else scroll-x="ture" scroll-y="false" class="nav text-center text-xs padding margin-top solid-top solid-bottom">
      <view class="cu-item" wx:for="{{bkType1}}" bindtap = "typeActive" id="{{item.icon}}" data-modal="{{item.name}}">
        <!-- <view class="flex cu-avatar round" style="background-image:url({{item.url}});"></view> -->
        <text class="cuIcon-{{item.icon}} lg {{iconType==item.icon?'text-white bg-blue':'text-black bg-grey light'}} flex cu-avatar round" style="font-size:x-large;"></text>
        <text class="{{iconType==item.icon?'text-blue':'text-black'}}" style="font-size:larger;">{{item.name}}</text>
      </view>
    </scroll-view>

    <view class="cu-form-group" style="margin:0,20rpx;">
		  <textarea maxlength="-1" bindinput="handleInputChange" value="{{remarkText}}" data-modal='1' placeholder="备注"></textarea>
  	</view>
    
    <picker class="bg-grey padding light text-right" mode="multiSelector" value="{{dateTime1}}" bindchange="changeDateTime1" bindcolumnchange="changeDateTimeColumn1" range="{{dateTimeArray1}}">
      {{dateTimeArray1[0][dateTime1[0]]}}-{{dateTimeArray1[1][dateTime1[1]]}}-{{dateTimeArray1[2][dateTime1[2]]}} {{dateTimeArray1[3][dateTime1[3]]}}:{{dateTimeArray1[4][dateTime1[4]]}}<text class="cuIcon-triangledownfill"></text>
    </picker>
<!-- <button style="width: 20%;margin-left: 40%" class="cu-btn bg-blue margin-left"  bindtap="hideModal">提交</button> -->
<!-- <button style="width: 100%; height: 100rpx; margin-top: 10rpx;" class="cu-btn bg-blue margin-left"  bindtap="postData">提交</button> -->
  </view>
</view>

<view class="padding" style="position:fixed;width:100%;bottom:30rpx;">
  <button class="cu-btn bg-blue" style="width:100%;height:80rpx" bindtap="postData">保存</button>
</view>
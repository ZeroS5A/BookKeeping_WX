<!--pages/bookkeeping/bookkeeping.wxml-->
<view class="container bg-black">
  <text class="text-xl">全部支出<text class="text-sl">{{bkData.sumExpendMoney}}</text>元</text>
  <text class="text-l">全部收入<text class="text-l">{{bkData.sumIncomeMoney}}</text>元</text>
</view>

<view class="cu-bar search bg-white">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="搜索" confirm-type="search"></input>
  </view>
  <view class="action">
    <text>全部</text><!--今日/今月/全部-->
    <text class="cuIcon-triangledownfill"></text>
  </view>
</view>

<view class="cu-list menu-avatar">
  <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{bkData.bookkeepingList}}" wx:key bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
    <view class="cu-avatar round lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big2100{{index+1}}.jpg);"></view><!--账单类型图标-->
    <view class="content flex-sub">
      <view class="flex justify-between text-l">
        <view>
          <text>{{bkData.bookkeepingList[index].bkType}}</text><!--账单类型-->
          -
          <text class="text-cut">{{bkData.bookkeepingList[index].remarkText}}</text><!--账单备注-->
        </view>
        <view>
          <text>{{bkData.bookkeepingList[index].bkMoney}}</text><!--账单金额-->
          元
        </view>
      </view>
      <view class="flex justify-between text-sm">
        <text>{{bkData.bookkeepingList[index].incomeOrExpend=='income'?'收入':'支出'}}</text><!--收入/支出-->
        <text>{{bkData.bookkeepingList[index].bkDate}}</text><!--账单日期-->
      </view>
    </view>
    <view class="move" bind:tap="deleteBookkeeping" data-value="{{index}}">
      <view class="bg-red">删除</view>
    </view>
  </view>
</view>

<view class="bg-blue round shadow text-center" style="display:flex;flex-direction:column;justify-content:center;position:fixed;width:100rpx;height:100rpx;bottom:50rpx;right:50rpx;" bind:tap="openBookkeepingEdit">
  <text class="text-xxl">+</text>
</view>